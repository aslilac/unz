{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "target/types",
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "target",
		"strict": true,
		"target": "esnext"
	},
	"typedocOptions": {
		"excludeNotExported": true,
		"ignoreCompilerErrors": true,
		"mode": "file",
		"out": "doc",
		"readme": "none",
		"theme": "minimal"
	},
	"include": ["lib/**/*"]
}
